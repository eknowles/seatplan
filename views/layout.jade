doctype html
html(lang='en', ng-app='app')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.2.3/css/bulma.min.css')
    block css
      link(rel='stylesheet', href='/css/style.css')
    block js
      if ENV_DEVELOPMENT
        script(src='http://localhost:35729/livereload.js')
  body
    nav.nav
      .container
        .nav-left
          a.nav-item.is-brand(href='/')
            | Seat Plan
        .nav-center
        span.nav-toggle
          span
          span
          span
        .nav-right.nav-menu
          a.nav-item(href='/help') Help
          if user
            a.nav-item(href='/logout') Logout

    section.hero.is-primary
      .hero-body
        .container
          h1.title=title
          h2.subtitle=subtitle

    if messages && messages.length
      section.section(style='padding-bottom:0;')
        .container
          for message in messages
            if message.type === 'success'
              .notification.is-success=message.text
            if message.type === 'danger'
              .notification.is-danger=message.text

    block content

    footer.footer
      .container
        .content.has-text-centered
          p
            strong Seat Plan
            |  by&nbsp;
            a(href='mailto:edward.knowles@addisonlee.com') Edward Knowles
          p
            a.icon(href='https://github.com/eknowles/seatplan', target='_blank')
              i.fa.fa-github
